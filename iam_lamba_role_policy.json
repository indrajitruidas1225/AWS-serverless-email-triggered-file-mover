{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::email-inbox-bucket",
        "arn:aws:s3:::email-inbox-bucket/*",
        "arn:aws:s3:::upload-bucket",
        "arn:aws:s3:::upload-bucket/*",
        "arn:aws:s3:::move-bucket",
        "arn:aws:s3:::move-bucket/*"
      ]
    }
  ]
}